<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.GamingAct.GamingActivity">

    <Button
        android:id="@+id/id_GamingAct_PauseGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_GamingAct_PauseGameButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <Button
        android:id="@+id/id_GamingAct_ExitGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_GamingAct_ExitGameButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/id_GamingAct_UserNameDownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916" />

    <TextView
        android:id="@+id/id_GamingAct_UserNameLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LeftUSER"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />


    <TextView
        android:id="@+id/id_GamingAct_UserNameRightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RightUSER"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <TextView
        android:id="@+id/id_GamingAct_UserNameUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UpUSER"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <FrameLayout
        xmlns:cascade="http://schemas.android.com/apk/res-auto"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="1.0">

        <com.oosad.cddgame.UI.GamingAct.view.CascadeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            cascade:horizontal_spacing="30dp"
            cascade:vertical_spacing="00dp">

            <View
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="#ff0000" />

            <View
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="#00ff00" />

            <View
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="#0000ff" />

            <View
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="#00ffff" />
        </com.oosad.cddgame.UI.GamingAct.view.CascadeLayout>


    </FrameLayout>

</android.support.constraint.ConstraintLayout>