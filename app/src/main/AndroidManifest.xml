<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oosad.cddgame">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".UI.LoginAct.LoginActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UI.MainAct.MainActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".UI.SettingAct.SettingActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".UI.GamingAct.GamingActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".UI.ScoreAct.ScoreActivity"
            android:screenOrientation="landscape" />

        <service
            android:name=".Service.MusicService"
            android:exported="false" >
        </service>

    </application>

</manifest>